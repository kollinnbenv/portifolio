---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Tag from '../components/Tag.astro';
import projects from '../../content/projects.json';

const base = import.meta.env.BASE_URL;
const featured = projects.filter((project) => project.featured).slice(0, 3);
const skills = [
  'terraform',
  'kubernetes',
  'gitops',
  'observability',
  'sre',
  'aws',
  'gcp',
  'ci-cd',
  'security',
  'postgres'
];
---
<BaseLayout title="Home" description="DevOps, SRE e Cloud com foco em automacao, confiabilidade e plataformas modernas.">
  <section class="section hero">
    <div>
      <h1 class="reveal" style="--delay: 40ms;">Kollinn Benvenutti</h1>
      <p class="reveal tagline" style="--delay: 80ms;">DevOps / SRE / Cloud Engineer</p>
      <p class="reveal" style="--delay: 120ms;">
        Engenharia de confiabilidade, automacao de infraestrutura e plataformas cloud prontas para escala.
      </p>
      <ul class="hero-bullets reveal" style="--delay: 160ms;">
        <li>Terraform + IaC</li>
        <li>Kubernetes + GitOps</li>
        <li>Observability + SRE</li>
      </ul>
      <div class="cta-row reveal" style="--delay: 220ms;">
        <a class="button primary" href={`${base}#projects`}>Ver projetos</a>
        <a class="button" href="https://github.com/kollinnbenv" target="_blank" rel="noopener">GitHub</a>
        <a class="button" href="https://linkedin.com/in/kollinnbenv" target="_blank" rel="noopener">LinkedIn</a>
        <a class="button" href={`${base}cv-kollinn.pdf`} download>Baixar CV</a>
      </div>
    </div>
    <div class="reveal" style="--delay: 200ms;">
      <div class="card">
        <h2>Operacao previsivel</h2>
        <p class="summary">
          Pipelines de entrega com guardrails, SLOs e observabilidade completa. Menos alertas ruidosos,
          mais confiabilidade real.
        </p>
        <div class="tag-row">
          <Tag label="slo" />
          <Tag label="incident" />
          <Tag label="platform" />
        </div>
      </div>
    </div>
  </section>

  <section id="projects" class="section">
    <h2 class="section-title">Projetos em destaque</h2>
    <div class="grid">
      {featured.map((project) => (
        <ProjectCard project={project} href={`${base}projects/${project.slug}/`} />
      ))}
    </div>
  </section>

  <section class="section">
    <h2 class="section-title">Skills</h2>
    <div class="skills">
      {skills.map((skill) => (
        <Tag label={skill} />
      ))}
    </div>
  </section>

  <section id="contact" class="section">
    <h2 class="section-title">Contato</h2>
    <p class="summary">
      Vamos falar sobre resiliencia, custos e operacao cloud. Respondo rapido para projetos de infraestrutura e SRE.
    </p>
    <div class="cta-row">
      <a class="button" href="https://github.com/kollinnbenv" target="_blank" rel="noopener">GitHub</a>
      <a class="button" href="https://linkedin.com/in/kollinnbenv" target="_blank" rel="noopener">LinkedIn</a>
      <a class="button" href="mailto:contato@example.com">Email</a>
    </div>
  </section>
</BaseLayout>
